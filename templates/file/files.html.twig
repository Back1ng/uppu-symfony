{% extends 'base.html.twig' %}

{% block title %}Last Files{% endblock %}

{% block body %}
    {% for file in files %}
        <div class="row">
            <div class="card my-4 mx-auto col-10 col-lg-8 text-center shadow">
                {#            {% include 'file/file_info.html.twig' %}#}
                <div class="card-body">
                    <h5 class="card-title">{{ file.originalName }}</h5>
                    <a href="/file/{{ file.id }}" class="btn btn-primary">Show</a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
